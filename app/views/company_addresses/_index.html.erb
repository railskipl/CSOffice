

<h1>Listing Company Address</h1>

	<table cellpadding="10"  align=center border> 
	<tr><th>Company Address Line 1
		<th>Company Address Line 2
		<th>Status
		<th>Date
		<th colspan="3">Action
		<% @company_addresses.each do |company_address| %>
		
	<tr>
		<td><%= company_address.line1 %>
    	<td><%= company_address.line2 %>
