	<%= form_for(@incidental_object) do |f| %>
	
	<div class="field">
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :description %><br>
		<%= f.text_area :description, :rows =>5 ,:cols => 38 %>
	</div>
	
	<% if @incidental_object.user_id == nil %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  <% end %>
	<div class="actions">
		<%= f.submit "Save"  %>
		
	</div>
	<% end %>
