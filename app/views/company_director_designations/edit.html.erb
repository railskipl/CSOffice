<div align="center" id="middle">
    <div class="newuser_box">
    	
<%= form_for(@company_director_designation) do |f| %>
<table> 
	  <tr>
	<th>Din Name
<td>		<td><%= select  :company_director_designation, :din_id, @din_curr.map {|c| ["#{Contact.find_by_id(c.contact_id).first_name}", c.id]} rescue "" %> </td>


	<tr>
		<th align="justify" ><%= f.label "Is chairman" %></th> 
