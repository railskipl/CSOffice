		<th align="justify" ><%= f.label "Is executive director" %></th> 
      	<td>
      		<%= f.radio_button :is_executive_director ,true %>Yes
    		<%= f.radio_button :is_executive_director  ,false%>No
    	</td>
    </tr>
    <tr>
		<th align="justify" ><%= f.label "Is non  executive director" %></th> 
      	<td>
      		<%= f.radio_button :is_non_executive_director ,true %>Yes
    		<%= f.radio_button :is_non_executive_director  ,false%>No
    	</td>
    </tr>
    <tr>
		<th align="justify" ><%= f.label "Is managing director" %></th> 
